<form role="form" class="form-horizontal">

    <fieldset>
        <legend>Sleep Rythm</legend>
        <div class="form-group">
            <label class="col-sm-3 control-label">Sleep</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default">Now</button>
                    </span>
                    <input type="datetime" class="form-control" />
                    <span class="input-group-btn">
                        <button class="btn btn-default"><i class="glyphicon glyphicon-time"></i></button>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Wake Up</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default">Now</button>
                    </span>
                    <input type="datetime" class="form-control" />
                    <span class="input-group-btn">
                        <button class="btn btn-default"><i class="glyphicon glyphicon-time"></i></button>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Rise</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default">Now</button>
                    </span>
                    <input type="datetime" class="form-control" />
                    <span class="input-group-btn">
                        <button class="btn btn-default"><i class="glyphicon glyphicon-time"></i></button>
                    </span>
                </div>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>Goal Setting</legend>
        <div class="form-group">
            <label class="col-sm-3 control-label">Goals</label>
            <div class="col-sm-9">
                <input type="number" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Met</label>
            <div class="col-sm-9">
                <input type="number" class="form-control" />
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>Meals</legend>
        <div class="form-group">
            <label class="col-sm-3 control-label">Breakfast</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default">Now</button>
                    </span>
                    <input type="datetime" class="form-control" />
                    <span class="input-group-btn">
                        <button class="btn btn-default"><i class="glyphicon glyphicon-time"></i></button>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Lunch</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default">Now</button>
                    </span>
                    <input type="datetime" class="form-control" />
                    <span class="input-group-btn">
                        <button class="btn btn-default"><i class="glyphicon glyphicon-time"></i></button>
                    </span>
                </div>
 
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Dinner</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default">Now</button>
                    </span>
                    <input type="datetime" class="form-control" />
                    <span class="input-group-btn">
                        <button class="btn btn-default"><i class="glyphicon glyphicon-time"></i></button>
                    </span>
                </div>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>Rituals</legend>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" /> Daily Planning
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" /> Recite Manifesto
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" /> House Chores
                    </label>
                </div>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>Review</legend>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" /> Feeling Accomplished?
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Mood</label>
            <div class="col-sm-9">
                <select class="form-control">
                    <option>Happy</option>
                    <option>Anxious</option>
                    <option>Sad</option>
                    <option>Meh</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Notes</label>
            <div class="col-sm-9">
                <textarea class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-primary btn-lg">The Day is Done</button>
            </div>
        </div>


    </fieldset>

</form>
